# Environment Configuration Example
# Copy this file to .env and update values

# Application Settings
APP_NAME="Farmer Advisory Chatbot API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG="False"

# Database
DATABASE_URL="sqlite:///./chatbot.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/chatbot_db"

# Authentication & JWT
JWT_SECRET="change-this-to-a-secure-random-string-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="1440"

# OpenAI API
OPENAI_API_KEY="sk-xxxxxxxxxxxx"
OPENAI_MODEL="gpt-4o-mini"

# RAG Settings
VECTORSTORE_PATH="data/vectorstore"
EMBEDDING_MODEL="all-MiniLM-L6-v2"
CHUNK_SIZE="500"
CHUNK_OVERLAP="50"
TOP_K_RESULTS="5"

# Translation
TRANSLATION_SERVICE="google"  # Options: "google" or "local"
# For Google Translate, set up credentials:
# GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# File Upload
MAX_UPLOAD_SIZE_MB="50"
UPLOAD_DIR="data/uploads"

# Logging
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR="logs"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_PERIOD_SECONDS="3600"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# Server
PORT="8000"
HOST="0.0.0.0"
